SELECT SCHEDULETYPEID,SCHEDULETYPENAME FROM SCHEDULETYPES WHERE STATUS=1
AND SCHEDULETYPENAME NOT IN ('Reports') AND SCHEDULETYPEID NOT IN(5,6,11,12)
ORDER BY SCHEDULETYPENAME

SELECT SCHEDULEID,SCHEDULENAME FROM SCHEDULE WHERE SCHEDULETYPEID=
(SELECT TOP 1 SCHEDULETYPEID FROM SCHEDULETYPES WHERE STATUS=1
AND SCHEDULETYPENAME NOT IN ('Reports') AND SCHEDULETYPEID NOT IN(5,6,11,12)
ORDER BY SCHEDULETYPENAME) AND STATUS=1 ORDER BY SCHEDULENAME

SELECT TEMPLATEBODY,DEFAULTSUBJECT FROM SCHEDULEEMAILTEMPLATE WHERE SCHEDULETYPEID=(SELECT TOP 1 SCHEDULETYPEID FROM SCHEDULETYPES WHERE STATUS=1
AND SCHEDULETYPENAME NOT IN ('Reports') AND SCHEDULETYPEID NOT IN(5,6,11,12)
ORDER BY SCHEDULETYPENAME)