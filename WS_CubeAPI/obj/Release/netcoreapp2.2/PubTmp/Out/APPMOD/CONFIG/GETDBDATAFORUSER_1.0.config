SELECT (SELECT SITENAME  FROM SITES WHERE SITEID=@SITEID),
(SELECT ROLENAME  FROM ROLES WHERE ROLEID IN ( SELECT DEFAULTROLEID FROM USERINFO WHERE USERID=@USERID)),
(SELECT COUNT(1) FROM STOPCARDENTRY WHERE MONTH(GETDATE())=MONTH(OBSERVATIONDATE) AND STOPCARDTYPE=1 AND SITEID=@SITEID) AS OBSERVATIONCOUNT,(SELECT COUNT(1) FROM STOPCARDENTRY WHERE MONTH(GETDATE())=MONTH(OBSERVATIONDATE) AND STOPCARDTYPE=2 AND SITEID=@SITEID) AS CORRECTIVEACTIONCOUNT
