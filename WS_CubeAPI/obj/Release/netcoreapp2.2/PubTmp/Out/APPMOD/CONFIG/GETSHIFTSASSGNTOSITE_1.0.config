--GETSHIFTSASSGNTOSITE_1.0
SELECT '<option value="'+CAST(S.SHIFTID AS VARCHAR(32))+'">'+CASE WHEN S.[STATUS]= 1 THEN SHIFTNAME WHEN S.[STATUS] = 0 THEN SHIFTNAME + ' ( InActive ) '  END+'</option>' AS 'data()'
FROM SHIFTS S
INNER JOIN SITESHIFTS SH ON SH.SHIFTID=S.SHIFTID AND SH.SITEID=@SITEID
WHERE SH.STATUS=1 AND S.STATUS <> 2
ORDER BY SHIFTNAME
FOR XML PATH('')