DECLARE @FORMAT INT,@CHAT NVARCHAR(MAX)
SELECT @FORMAT=[DATEFORMAT] FROM USERINFO WHERE USERID =@USERID

IF @FORMAT IS NULL OR @FORMAT = 0 
     SELECT @FORMAT=CAST(OPTIONVALUE AS INT) FROM COMPANYOPTIONS WHERE OPTIONNAME='DefaultDateFormat'
SET @CHAT=N''

IF EXISTS(SELECT 1 FROM dbo.STOPCARDENTRYUPDATEREQUEST_OL WHERE CARDID =@CARDID)
BEGIN
SET @CHAT=N'<div class=''divChatMain''>'

SELECT @CHAT=@CHAT+'<div class='''+CASE REQUESTTYPE WHEN 1 THEN 'divChatMainsend' WHEN 2 THEN 'divChatMainrec' ELSE 'divChatMainsend' END +'''><div class=''divchathead''><div class=''divchatheadleft''>'+(SELECT LASTNAME+' '+FIRSTNAME FROM USERS WHERE USERID=SL.CREATEDBY)+'</div><div class=''divchatheadright''>'+CONVERT(VARCHAR(32),SL.CREATEDDATE,@FORMAT)+' '+CONVERT(VARCHAR(8), SL.CREATEDDATE, 108)+'</div></div><div class=''divchatcont''>'+REPLACE(REPLACE(SL.COMMENTS,'<','&lt'),'>','&gt')+'</div></div><div class=''divchatlb''></div>'
FROM STOPCARDENTRYUPDATEREQUEST_OL SL  WHERE CARDID =@CARDID ORDER BY REQUESTID

SET @CHAT=@CHAT+'</div>'
END
ELSE
SET @CHAT=''

SELECT @CHAT COMMENTS