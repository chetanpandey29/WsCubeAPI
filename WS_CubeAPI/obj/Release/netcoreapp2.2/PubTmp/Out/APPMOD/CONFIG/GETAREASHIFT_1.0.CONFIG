--GETAREASHIFT_1.0
SELECT DISTINCT A.AREAID,REPLACE(REPLACE(A.AREANAME,'\','\\'),'"','\"') AREANAME FROM AREAS A
INNER JOIN SITEAREAS SA ON A.AREAID=SA.AREAID
WHERE SA.SITEID IN(@SITEID) AND SA.STATUS=1 AND A.STATUS = 1
ORDER BY AREANAME


SELECT DISTINCT S.SHIFTID,REPLACE(REPLACE(S.SHIFTNAME,'\','\\'),'"','\"') SHIFTNAME FROM SHIFTS S
INNER JOIN SITESHIFTS SS ON S.SHIFTID=SS.SHIFTID
WHERE SS.SITEID IN (@SITEID) AND SS.STATUS=1 AND S.STATUS = 1
ORDER BY SHIFTNAME