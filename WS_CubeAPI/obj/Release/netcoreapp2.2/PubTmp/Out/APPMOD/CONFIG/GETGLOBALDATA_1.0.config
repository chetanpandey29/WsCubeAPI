--GETGLOBALDATA_1.0
DECLARE @OBSLISTINGXMONTHS INT
SELECT @OBSLISTINGXMONTHS = ISNULL(OPTIONVALUE,12) FROM COMPANYOPTIONS WHERE COMPANYID=@COMPANYID AND OPTIONNAME='OBSLISTINGXMONTHS'

DECLARE @STARTDATE NVARCHAR(32),@ENDDATE NVARCHAR(32)
SELECT @STARTDATE='',@ENDDATE=''
SELECT @STARTDATE=CONVERT(NVARCHAR(32),DATEADD(DAY, 1 - DAY(GETDATE()),DATEADD(MONTH,-(@OBSLISTINGXMONTHS), GETDATE())),101),@ENDDATE =CONVERT(NVARCHAR(32),GETDATE(),101)


SELECT (SELECT OPTIONVALUE FROM COMPANYOPTIONS WHERE COMPANYID=@COMPANYID AND OPTIONNAME='Languages')[GLOBALLANGUAGE],
(SELECT  OPTIONVALUE FROM COMPANYOPTIONS WHERE COMPANYID=@COMPANYID AND OPTIONNAME='CompanyLogo')[COMPANYLOGO],
(SELECT  OPTIONVALUE FROM COMPANYOPTIONS WHERE COMPANYID=@COMPANYID AND OPTIONNAME='CustomColor')[CUSTOMCOLOR],
(SELECT  OPTIONVALUE FROM COMPANYOPTIONS WHERE COMPANYID=@COMPANYID AND OPTIONNAME='CustomFont')[FONTCOLOR],
(SELECT  OPTIONVALUE FROM COMPANYOPTIONS WHERE COMPANYID=@COMPANYID AND OPTIONNAME='MaxUserCount')[MAXUSERCOUNT],
(SELECT  OPTIONVALUE FROM COMPANYOPTIONS WHERE COMPANYID=@COMPANYID AND OPTIONNAME='MaxSiteCount')[MAXSITECOUNT],
(SELECT  OPTIONVALUE FROM COMPANYOPTIONS WHERE COMPANYID=@COMPANYID AND OPTIONNAME='LanguageVersionkey')[LANGCACHEKEY],
(SELECT  OPTIONVALUE FROM COMPANYOPTIONS WHERE COMPANYID=@COMPANYID AND OPTIONNAME='EnableChecklistComments')[ENABLECHECKLISTCOMMENTS],
(SELECT  OPTIONVALUE FROM COMPANYOPTIONS WHERE COMPANYID=@COMPANYID AND OPTIONNAME='MaxPeopleObservedLimit')[MAXOBSERVEDLIMIT],
(SELECT  OPTIONVALUE FROM COMPANYOPTIONS WHERE COMPANYID=@COMPANYID AND OPTIONNAME='PreviousDaysLimitOnObservationDate')[PREVIOUSDAYLIMITONOBSDATE],
(SELECT  OPTIONVALUE FROM COMPANYOPTIONS WHERE COMPANYID=@COMPANYID AND OPTIONNAME='ObsApprovePC')[OBSAPPROBEPC],
(SELECT  OPTIONVALUE FROM COMPANYOPTIONS WHERE COMPANYID=@COMPANYID AND OPTIONNAME='ObsApproveMobile')[OBSAPPROVEMOBILE],
(SELECT  OPTIONVALUE FROM COMPANYOPTIONS WHERE COMPANYID=@COMPANYID AND OPTIONNAME='ENABLEAREAMANAGER')[ENABLEAREAMANAGER],
(SELECT  OPTIONVALUE FROM COMPANYOPTIONS WHERE COMPANYID=@COMPANYID AND OPTIONNAME='EXPANDCATEGORY')[EXPANDCATEGORY],
(SELECT  OPTIONVALUE FROM COMPANYOPTIONS WHERE COMPANYID=@COMPANYID AND OPTIONNAME='ENABLESUBAREAS')[ENABLESUBAREA],
@OBSLISTINGXMONTHS [OBSLISTINGXMONTHS],@STARTDATE+' - '+@ENDDATE[OBSLISTINGXMONTHSVAL],
(SELECT  OPTIONVALUE FROM COMPANYOPTIONS WHERE COMPANYID=@COMPANYID AND OPTIONNAME='DUMPREPORTINTERVAL')[DUMPREPORTINTERVAL],
(SELECT  OPTIONVALUE FROM COMPANYOPTIONS WHERE COMPANYID=@COMPANYID AND OPTIONNAME='ENABLETRACE')[ENABLETRACE]
