SELECT ET.ENTITYID,ET.ENTITYNAME,ET.ENTITYVALUE
FROM CUSTOMFIELDS CF
INNER JOIN ENTITYTRANSLATION ET ON ET.PARENTID=CF.CUSTOMFIELDID AND ET.ENTITYID=CF.CUSTOMFIELDID AND ET.LANGUAGEID=@LANGUAGEID AND ET.ENTITYTYPE='CUS_NAME'
WHERE CF.STATUS=1  AND CF.CUSTOMFIELDID=@CUSTOMFIELDID
UNION ALL
SELECT ET.ENTITYID,ET.ENTITYNAME,ET.ENTITYVALUE
FROM CUSTOMFIELDS CF
INNER JOIN CUSTOMFIELDVALUES CFV ON CFV.CUSTOMFIELDID=CF.CUSTOMFIELDID
INNER JOIN ENTITYTRANSLATION ET ON ET.PARENTID=CFV.CUSTOMFIELDID AND ET.ENTITYID=CFV.CUSTOMFIELDVALUEID AND ET.LANGUAGEID=@LANGUAGEID AND ET.ENTITYTYPE='CUS_VALUE'
WHERE CF.STATUS=1  AND CFV.STATUS=1 and CF.CUSTOMFIELDID=@CUSTOMFIELDID