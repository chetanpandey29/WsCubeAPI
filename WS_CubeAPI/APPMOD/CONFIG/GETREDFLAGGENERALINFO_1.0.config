SELECT [REDFLAGID]
,[REDFLAGNAME]
,[SITENAME] + CASE WHEN S.STATUS=0 THEN '( InActive )' ELSE '' END SITENAME
,[MAINCATEGORYID]
,[SUBCATEGORYID]
,[AREAID]
,[SUBAREAID]
,[OBSERVERID]
,[METRIC]
,[TRIGGER]
,[VALUE]
,[CHECKLISTSETUPID]
,RF.[STATUS]
,RF.SITEID
FROM [REDFLAGS]RF
INNER JOIN SITES S
ON RF.SITEID = S.SITEID
WHERE REDFLAGID = @REDFLAGID


