DECLARE @CC_TIMESTAMP DATETIME
SET @CC_TIMESTAMP=GETDATE()

UPDATE SHIFTS SET [STATUS] = CASE  WHEN  [STATUS] = 1 THEN 0  WHEN  [STATUS] = 0 THEN 1 END,UPDATEDBY=@USERID,UPDATEDDATE=GETDATE()  WHERE SHIFTID IN (SELECT RESULT FROM DBO.CSVtoTable(@SHIFTID))

INSERT INTO dbo.AUDIT(TABLENAME,TRANS,STAMP,LASTUPDATEDBY,DATA)
SELECT 'SHIFTS','UPDATE-CHANGESTATUS_SHIFTS_1.0',@CC_TIMESTAMP,@USERID,(SELECT SHIFTID,STATUS FROM SHIFTS WHERE UPDATEDBY=@USERID AND UPDATEDDATE=@CC_TIMESTAMP FOR XML AUTO)

