IF @USERID = 0
SELECT TIMEZONEID,TIMEZONENAME FROM TIMEZONES WHERE TIMEZONEID=(SELECT TIMEZONEID FROM SITES WHERE SITEID=(SELECT DEFAULTSITEID FROM USERINFO WHERE USERID=@LOGGEDUSERID) AND STATUS=1)
ELSE
SELECT TIMEZONEID,TIMEZONENAME FROM TIMEZONES WHERE TIMEZONEID=(SELECT TIMEZONEID FROM SITES WHERE SITEID=(SELECT DEFAULTSITEID FROM USERINFO WHERE USERID=@USERID) AND STATUS=1)
