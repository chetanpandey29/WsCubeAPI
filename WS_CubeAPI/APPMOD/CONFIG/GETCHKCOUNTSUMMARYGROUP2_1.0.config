DECLARE @ENABLESUBAREA INT
SELECT @ENABLESUBAREA = ISNULL(OPTIONVALUE,0) FROM COMPANYOPTIONS WHERE OPTIONNAME='ENABLESUBAREAS'

IF (@ENABLESUBAREA = 1)
BEGIN
	SELECT FILTERID,FILTERVALUE FROM
	(SELECT -1 FILTERID,'LBLSITE' FILTERVALUE UNION ALL
	SELECT -2 FILTERID,'LBLAREA' FILTERVALUE UNION ALL
	SELECT -5 FILTERID,'LBLSUBAREANAME' FILTERVALUE UNION ALL
	SELECT -3 FILTERID,'LBLSHIFT' FILTERVALUE UNION ALL
	SELECT -4 FILTERID,'LBLOBSERVER' FILTERVALUE UNION ALL
	SELECT PARENTID FILTERID,ENTITYVALUE FILTERVALUE FROM ENTITYTRANSLATION ET
	INNER JOIN GROUPTYPES G ON G.GROUPTYPEID=ET.PARENTID
	WHERE ENTITYTYPE='GRP_TYPE' AND LANGUAGEID = @LANGUAGEID AND G.STATUS =1) A
	WHERE FILTERID NOT IN (@CHKSUMGROUP1,@CHKSUMGROUP3)
END
ELSE
BEGIN
	SELECT FILTERID,FILTERVALUE FROM
	(SELECT -1 FILTERID,'LBLSITE' FILTERVALUE UNION ALL
	SELECT -2 FILTERID,'LBLAREA' FILTERVALUE UNION ALL
	SELECT -3 FILTERID,'LBLSHIFT' FILTERVALUE UNION ALL
	SELECT -4 FILTERID,'LBLOBSERVER' FILTERVALUE UNION ALL
	SELECT PARENTID FILTERID,ENTITYVALUE FILTERVALUE FROM ENTITYTRANSLATION ET
	INNER JOIN GROUPTYPES G ON G.GROUPTYPEID=ET.PARENTID
	WHERE ENTITYTYPE='GRP_TYPE' AND LANGUAGEID = @LANGUAGEID AND G.STATUS =1) A
	WHERE FILTERID NOT IN (@CHKSUMGROUP1,@CHKSUMGROUP3)

END
